# Application
NODE_ENV=development
APP_NAME=Bank Order Processing System
APP_PORT=3000
API_VERSION=v1
API_PREFIX=api

# Database
MONGODB_URI=mongodb://localhost:27017/bank_orders
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB_NAME=bank_orders

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:4200
CORS_CREDENTIALS=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Security
BCRYPT_SALT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# TCS Courier Configuration
TCS_BEARER_TOKEN=your-tcs-bearer-token-here

# File Upload (if needed)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Email (Optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@bankorders.com

# Monitoring (Optional)
SENTRY_DSN=
